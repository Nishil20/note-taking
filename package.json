{
  "name": "note-taking-app",
  "version": "1.0.0",
  "description": "A simple note app where users can write, edit, and organize notes with features like tags and search functionality",
  "author": "Nishil",
  "type": "module",
  "scripts": {
    "dev": "node scripts/dev.js",
    "list": "node scripts/dev.js list",
    "generate": "node scripts/dev.js generate",
    "parse-prd": "node scripts/dev.js parse-prd",
    "server": "cd server && npm run dev",
    "client": "cd client && npm run dev",
    "dev:app": "concurrently \"npm run server\" \"npm run client\""
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "boxen": "^7.1.1",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.3",
    "commander": "^11.1.0",
    "concurrently": "^8.2.2",
    "dotenv": "^16.3.1",
    "figlet": "^1.7.0",
    "gradient-string": "^2.0.2",
    "openai": "^4.86.1",
    "ora": "^7.0.1"
  }
}
